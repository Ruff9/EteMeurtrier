body
	font-family 'Cutive Mono'
	background-color white

.container
	max-width 1100px
	margin auto
	background-color white
	
.wrapper
	padding-top 65px

header
	padding-bottom 30px
	text-align center

h1
	font-size 1em
	color black
	font-weight inherit
	margin 0
	text-align center
	margin-top 30px

a
	text-decoration none
	color black

section.video
	margin-top 50px
	iframe
		width 100%
		height 290px
	article
		margin-bottom 20px

@media only screen and (min-width: 38em)

	.container
		width 1100px

	header
		display inline-block
		padding 20px 0
		width 1100px
		text-align left
		position fixed
		top 0px
		background-color white
		a.menu
			float right
			margin-left 20px
		h1
			float left
			text-align left
			margin-top 0
		p
			float left
			padding-left 70px
			margin 0
	
	section.video
		display inline-block
		margin-bottom 30px
		margin-top 120px
		&:first-of-type
			margin-top 90px
		iframe
			width 800px
			height 450px
			float left
		article
			width 250px
			float left
			margin-left 40px
			p:first-of-type
				margin-top 0
				margin-bottom 90px
				

